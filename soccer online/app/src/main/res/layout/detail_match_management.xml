<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bacground2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:textAlignment="center"
    android:textColor="#ffff"
    android:text="MATCH DETAIL"
    android:textStyle="bold"
    android:textSize="40sp"
    android:layout_margin="20sp"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_margin="10sp"
        >
       <TextView
           android:layout_width="120sp"
           android:layout_height="wrap_content"
           android:textColor="#ffff"
           android:text="Tên Sân:"
           android:textStyle="bold"
           android:textSize="25sp"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#ffff"
            android:text="Sân 2"
            android:layout_marginLeft="30dp"
            android:id="@+id/txtMatchDetail"
            android:textStyle="bold"
            android:textSize="30sp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_margin="10sp"
        >
        <TextView
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:text="Thời Gian:"
            android:textStyle="bold"
            android:textSize="25sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#ffff"
            android:text="14h-15h"
            android:layout_marginLeft="30dp"
            android:id="@+id/txtTimeMatch"
            android:textStyle="bold"
            android:textSize="25sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_margin="10sp"
        >
        <TextView
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:text="Ngày:"
            android:textStyle="bold"
            android:textSize="25sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#ffff"
            android:text="12/5/2016"
            android:layout_marginLeft="30dp"
            android:id="@+id/txtDateMatch"
            android:textStyle="bold"
            android:textSize="25sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_margin="10sp"
        >
        <TextView
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:text="Người Đặt:"
            android:textStyle="bold"
            android:textSize="25sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#ffff"
            android:text="Lê Dức Tiến"
            android:layout_marginLeft="30dp"
            android:id="@+id/txtNamePerson"
            android:textStyle="bold"
            android:textSize="25sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_margin="10sp"
        >
        <TextView
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:text="Người Đặt:"
            android:textStyle="bold"
            android:textSize="25sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#ffff"
            android:text="0123456789"
            android:layout_marginLeft="30dp"
            android:id="@+id/txtPhonePerson"
            android:textStyle="bold"
            android:textSize="25sp"
            />
    </LinearLayout>
</LinearLayout>